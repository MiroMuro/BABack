{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
